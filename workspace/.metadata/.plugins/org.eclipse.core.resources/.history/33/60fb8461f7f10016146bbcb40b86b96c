package com.ies.servidoreco;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.PrintWriter;
import java.net.InetSocketAddress;
import java.net.Socket;
import java.util.Random;

public class Cliente implements Runnable{
	Socket         conexion;
	Random         generador;
	BufferedReader bfr;
	PrintWriter    pw;
	String[]       palabras={
		"Hola", "mundo", "Java", "hilo"	
	};
	
	public Cliente(){
		generador=new Random();
		InetSocketAddress direccion;
		direccion=new InetSocketAddress(
				"localhost", 9876);
		Socket conexion;
		conexion=new Socket();
		try {
			conexion.connect(direccion);
			bfr=Utilidades.getFlujoLectura(
					conexion);
			pw=Utilidades.getFlujoEscritura(conexion);			
		} catch (IOException e) {
			System.out.println(
				"Error en conexion o envio/recepci贸n de datos");
		} //Fin del catch
	}
	public boolean servidorFunciona() 
	{
		/* Elegimos una palabra al azar*/
		String palabra=palabras[generador.nextInt(palabras.length)];
		try {
			eco = bfr.readLine();
			pw.println(palabra);
			String eco;
		} catch (IOException e) {
			//Si salta una excepci贸n probablemente
			//el servidor colaps贸
			//Indicamos que no funcion贸 con false
			return false;
		}
		if (eco.equals(palabra)){
			return true;
		} //Fin del if
		return false;
	}
	@Override
	public void run() {
		if (!servidorFunciona()){
			System.out.print("Fallo en el hilo");
			System.out.println(
				Thread.currentThread().getName());
		}
	} //Fin del run
} //Fin de la clase Cliente
